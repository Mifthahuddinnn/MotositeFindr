<% layout('layouts/app') %>
<div class="container">
    <h1 class="text-center mt-5">Add Motor</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="/pages" method="POST" class="validated-form" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" name="motor[title]" id="title" required>
                
                <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please choose a Title.
                  </div>
        
                <div class="mb-3">
                    <label for="licensePlate" class="form-label">License Plate</label>
                    <input type="text" class="form-control" name="motor[licensePlate]" required>
                </div>
        
                <div class="mb-3">
                    <label for="model" class="form-label">Model</label>
                    <input type="text" class="form-control" name="motor[model]" required>
                </div>
        
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea  id="description" class="form-control" name="motor[description]" required></textarea>
                </div>
        
                <div class="mb-3">
                    <label for="dateTime" class="form-label">Date - Time</label>
                    <input type="date" class="form-control" name="motor[dateTime]" id="dateTime" required>
                </div>
        
                <div class="mb-3">
                    <label for="image" class="form-label">Image</label>
                    <input type="file" id="image" class="form-control" name="image" accept="image/*" required multiple>


                </div>
        
                <div class="mb-3">
                    <button type="submit" class="btn btn-success">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

